<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contactListNameView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:textColor="#000000"
    android:textSize="50sp" >

    <ImageView
        android:id="@+id/contact_list_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/mango_default" />

    <TextView
        android:id="@+id/contact_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/contact_name_hint"
        android:textColor="#C1000000"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/contact_list_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contact_list_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/contact_description_hint"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/contact_list_image"
        app:layout_constraintTop_toBottomOf="@+id/contact_list_name" />
</androidx.constraintlayout.widget.ConstraintLayout>

